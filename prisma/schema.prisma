// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id                     String                @id @default(cuid())
  hirer                  String
  createdAt              DateTime
  discount               Float?
  totalValue             Float?
  eventType              EventType?            @relation(fields: [eventTypeId], references: [id])
  photographicRegister   PhotographicRegister? @relation(fields: [photographicRegisterId], references: [id])
  album                  Album?                @relation(fields: [albumId], references: [id])
  photoShoot             PhotoShoot?           @relation(fields: [photoShootId], references: [id])
  makingOf               MakingOf?             @relation(fields: [makingOfId], references: [id])
  photoPanel             PhotoPanel?           @relation(fields: [photoPanelId], references: [id])
  eventTypeId            String?
  photographicRegisterId String?
  albumId                String?
  photoShootId           String?
  makingOfId             String?
  photoPanelId           String?
  paymentId              String?
  appointment            Appointment[]
  installments           Installments[]

  @@map("Event")
}

model PhotographicRegister {
  id                   String  @id @default(cuid())
  professionalQuantity String
  photoAverage         String
  value                Float
  Event                Event[]
}

model Album {
  id         String  @id @default(cuid())
  size       String
  pages      String
  albumCover String
  value      Float
  Event      Event[]
}

model PhotoShoot {
  id    String  @id @default(cuid())
  value Float
  Event Event[]
}

model MakingOf {
  id    String  @id @default(cuid())
  value Float
  Event Event[]
}

model PhotoPanel {
  id    String  @id @default(cuid())
  size  String
  value Float
  Event Event[]
}

model Installments {
  id                String @id @default(cuid())
  installmentNumber Int
  date              String
  installmentValue  Float
  eventId           String
  event             Event? @relation(fields: [eventId], references: [id])
}

model Appointment {
  id               String @id @default(cuid())
  appointmentTitle String
  date             String
  locale           String
  dayOfWeek        String
  time             String
  eventId          String
  event            Event? @relation(fields: [eventId], references: [id])
}

model EventType {
  id    String  @id @default(cuid())
  type  String
  Event Event[]
}
